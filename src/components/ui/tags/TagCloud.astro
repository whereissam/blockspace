---
const { tags = [] } = Astro.props;
---

<div class="flex flex-wrap justify-center gap-2 p-4">
  {
    tags.length > 0 ? (
      tags.map((tag) => (
        <a
          href={`/tags/${tag}`}
          class="rounded-full bg-gray-100 px-3 py-1 text-sm font-semibold text-gray-600 transition hover:bg-gray-200"
        >
          #{tag}
        </a>
      ))
    ) : (
      <p class="text-gray-500">No tags available</p>
    )
  }
</div>

<style>
  .tag-cloud {
    @apply rounded-lg bg-gray-50 p-4 shadow-md;
  }
</style>
